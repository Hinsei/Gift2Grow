<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gift2grow</title>
    <%= csrf_meta_tags %>
     <link href="//fonts.googleapis.com/css?family=Rancho" rel="stylesheet" type="text/css">
    <link href='//fonts.googleapis.com/css?family=Ubuntu:bold' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Raleway:100' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
   <link href='//fonts.googleapis.com/css?family=Allan:bold' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="icon" type="image/jpg" href="https://cdn3.iconfinder.com/data/icons/badger-s-christmas/300/present-512.png">
  </head>

  <!-- nav bar -->
  <% if login? %>
    <nav class="navbar">
      <div class="container-fluid">
        <div class="navbar-header" style="color: white;">
          <button type="button" class="navbar-toggle collapsed glyphicon glyphicon-align-justify"  data-toggle="collapse" data-target="#collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Gift2Grow</a>
        </div>
        <div class="collapse navbar-collapse" id="collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to 'Home', company_giveaways_path(current_company) %>
            </li>
            <li>
              <%= link_to 'Profile', company_path(current_company) %>
            </li>
            <li>
              <%= link_to 'Create a GiveAway', new_company_giveaway_path(current_company) %>
            </li>
            <li>
              <%= link_to 'About Us', about_path %>
            </li>
            <li>
              <%= link_to 'Logout', logout_path, method: :delete %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="#">Hi <%= @current_company.name %></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
	 <% else %>
    <nav class="navbar">
      <div class="container-fluid">
        <div class="navbar-header" style="color: white;">
          <button type="button" class="navbar-toggle collapsed glyphicon glyphicon-align-justify" data-toggle="collapse" data-target="#collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Gift2Grow</a>
        </div>
        <div class= "collapse navbar-collapse" id="collapse-1">
          <ul class="nav navbar-nav">
            <li id="navbar-nav">
              <%= link_to 'Signup', signup_path %>
            </li>
            <li>
              <%= link_to 'Login', login_path %>
            </li>
            <li>
              <%= link_to 'About Us', about_path %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
	 <% end %>
  <body class="body">
    <%= yield %>
  </body>
</html>
