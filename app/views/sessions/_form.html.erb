<%= form_for :session do |form| %>
	<div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <%= form.submit "Login", class: "btn btn-default mainbutton1" %>

<% end %>