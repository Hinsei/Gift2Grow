<div class= "container-fluid">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1 form-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
					<h2 class="text-center black">
						Yay!!! You have successfully joined this giveaway!
					</h2>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
					<h4 class="text-center">
						Your Email: <%= @participant.email %>
					</h4>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
					<h4 class="text-center">
						Your Name: <%= @participant.name %>
					</h4>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
					<h4 class="text-center">
						Your Contact Number: <%= @participant.contact %>
					</h4>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
					<h4 class="text-center">
						Share this link to increase your chance!
					</h4>
					<h4 class="text-center">
			    <%= link_to @url + "/" + @participant.giveaway.link + "/" + @participant.referral_identification,  company_giveaway_path(@company, @giveaway, refId: @participant.referral_identification) %>
					</h4>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-md-2 col-md-offset-5 col-xs-6 col-xs-offset-3 text-center">
					<% unless @participant.giveaway.company.website == nil %>
						<%= link_to "Done", "http://www.#{@participant.giveaway.company.website}" , class: "btn btn-default mainbutton1 btn-block" %>
					<% else %>
						<%= link_to "Done", "http://www.#{@participant.giveaway.company.social_media_link[0]}" , class: "btn btn-default mainbutton1 btn-block" %>
					<% end %>
				</div>
			</div>
			<br>
		</div>
	</div>
</div>
