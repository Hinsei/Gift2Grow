<div class= "container-fluid">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-xs-8  col-xs-offset-2">
			<h1 class="text-center"> All Companies with G2G </h1>
		</div>
	</div>
	<table align="center">
			<tr>
				<th id="1"> Name </th>
				<th id="2"> Role </th>
				<th id="3"></th>
				<th id="4"> Delete </th>
			</tr>
				<% @companies.each do |company|%>
			<tr>
				<td><%= company.name %></td>
				<td><%= company.role %></td><td><%= link_to "Edit", edit_company_path(company.id) %></td>
				<td><%= link_to "Delete", company_path(company.id), data: { confirm: 'Are you sure?' },method: :delete  %> </td>
			</tr>
				<% end %>
			</table>

</div>
