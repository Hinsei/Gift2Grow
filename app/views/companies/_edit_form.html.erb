<%= form_for @company do |form| %>

  <div>
  	<%= form.label :name %>
  	<%= form.text_field :name %>
  </div>

	<div>
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email' %>
  </div>

  <div>
    <%= form.label :website %>
    <%= form.text_field :website %>
  </div>

  <div>
    <%= form.label :social_media_link %>
    <%= form.text_field :social_media_link %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

   <div>
    <%= form.label :contact %>
    <%= form.text_field :contact %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "Update Info" %>
<% end %>