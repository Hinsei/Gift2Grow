<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
			<h1 class="text-center companyshow-text">
				Your Company's Profile
			</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-2 form-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
					<h2 class="text-center title">
						Name
					</h2>
				</div>
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h3 class="text-center info">
						<%= @company.name %>
					</h3>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h2 class="text-center title">
						Email
					</h2>
				</div>
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h3 class="text-center info">
						<%= @company.email %>
					</h3>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h2 class="text-center title">
						Website
					</h2>
				</div>
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1 ">
					<h3 class="text-center info">
						<%= @company.website %>
					</h3>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h2 class="text-center title">
						Social Media Sites
					</h2>
				</div>
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<% if @company.social_media_link.empty? %>
						<h3 class="text-center info">
							None
						</h3>
					<% else %>
						<%= @company.social_media_link.each do |link| %>
							<h3 class="text-center info">
								<%= link %>
						<% end %>
					<% end %>
					</h3>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h2 class="text-center title">
						Address
					</h2>
				</div>
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h2 class="text-center info">
						<%= @company.address %>
					</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h2  class="text-center title">
						Contact
					</h2>
				</div>
				<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
					<h3 class="text-center info">
						<%= @company.contact %>
					</h3>
				</div>
			</div>
			<% if admin? %>
				<div class="row">
					<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
						<h2 class ="text-center title">
							 Role
						</h2>
					</div>
					<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
						<h3 class="text-center info">
							<%= @company.role %>
						</h3>
					</div>
				</div>
			<% end %>
			<br>
			</div>
		</div>
		<div class="spacing"></div>
		<div>
			<div class="row">
				<div class="col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3 text-center">
					<%= link_to "Edit", edit_company_path(@company), class: "btn btn-default btn-block mainbutton" %>
				</div>
			</div>
			<% if admin? %>
			<div class="row">
				<div class="col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3 text-center">
					<%= link_to "Other Companies", companies_path, class: "btn btn-default btn-block mainbutton2" %>
				</div>
			</div>
			<% end %>
			</div>
		</div>
<br>