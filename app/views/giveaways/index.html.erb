<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 col-ms-offset-2 col-xs-8 col-xs-offset-2">
			<p class="companyshow-text">
				Your Dashboard
			</p>
		</div>
	</div>

	<div id="giveaways-ongoing">
		<div class="header">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
					<h2 class="text-center headertitle">
						Ongoing Giveaways
					</h2>
				</div>
			</div>
		</div>
			<% if giveaways? %>
				<div class="row">
					<div class="col-md-4 col-xs-4">
						<h3 class="text-center dashtitle">
							Title
						</h3>
					</div>
					<div class="col-md-3 col-xs-3">
						<h3 class="text-center dashtitle">
							Link						
</h3>
					</div>
					<div class="col-md-2 col-xs-2">
						<h3 class="text-center dashtitle">
						 	Time Left
						</h3>
					</div>
					<div class="col-md-3 col-xs-3">
						<h3 class="text-center dashtitle">
							Participants
						</h3>
					</div>
				</div>
				<% ongoing.each do |giveaway| %>
					<div class="row">
						<div class="col-md-4 col-xs-4">
							<h4 class="text-center dashanswer">
								<%= link_to giveaway.title, edit_company_giveaway_path(@company, giveaway)  %>
							</h4>
						</div>

						<div class="col-md-3 col-xs-3">

							<h4 class="text-center dashanswer">
								<%= link_to "http://gift2grow/" + giveaway.link, company_giveaway_path(@company, giveaway) %>
							</h4>
						</div>
						<div class="col-md-2 col-xs-2">
							<h4 class="text-center dashanswer">
								Timer
							</h4>
						</div>
						<div class="col-md-3 col-xs-3">
							<h4 class="text-center dashanswer">
								<%= giveaway.participants.count %>
							</h4>
						</div>
					</div>
				<% end %>
			<% else %>
				<div class="row">
					<div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
						<h3 class="text-center empty">
							No Giveaway Running atm. Create one now!
						</h3>
					</div>
				</div>
			<% end %>
	</div>

	<div id="giveaways-finished">
		<div class="header">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
					<h2 class="text-center headertitle">
						Finished Giveaways
					</h2>
				</div>
			</div>
		</div>
			<% if winner? %>
				<div class="row">
					<div class="col-md4 col-xs-4">
						<h3 class="text-center dashtitle">
							Title
						</h3>
					</div>
					<div class="col-md-4 col-xs-4">
						<h3 class="text-center dashtitle">
							Participants
						</h3>
					<div class="col-md-4 col-xs-4">
						<h3 class="text-center dashtitle">
							Stats
						</h3>
					</div>
					</div>
				</div>
				<% finished.each do |giveaway| %>
					<div class="row">
						<div class="col-md-4 col-xs-4 dashanswer">
							<%= giveaway.title %>
						</div>
						<div class="col-md-4 col-xs-4 dashanswer">
							<%= giveaway.participants.count %>
						</div>
						<div class="col-md-4 col-xs-4 dashanswer dashlink">
							<%= link_to :stat %>
						</div>
					</div>
				<% end %>
			<% else %>
				<div class="row">
					<div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
						<h3 class="text-center empty">
							No Completed Giveaway atm.
						</h3>
					</div>
				</div>
			<% end %>
	</div>

</div>
